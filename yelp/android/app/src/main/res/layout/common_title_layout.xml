<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/common_title_rl"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:visibility="visible"
    android:background="@color/white"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/common_back_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:src="@mipmap/icon_return"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/common_back_iv"
        android:visibility="gone" />

    <TextView
        android:id="@+id/common_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:singleLine="true"
        android:textColor="#ff333333"
        android:textSize="18dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/common_iv_right"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="46dp"
        android:padding="7dp"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/common_iv_right_35"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:padding="7dp"
        android:visibility="gone"/>

    <!-- android:background="@drawable/ic_launcher" -->
    <ImageView
        android:id="@+id/common_iv_share"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="14dp"
        android:visibility="gone" />

    <!--  16dp -->
    <TextView
        android:id="@+id/common_right_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:text=""
        android:textSize="16dp" />

</RelativeLayout>
